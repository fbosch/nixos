{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "nixos": {
      "type": "local",
      "command": ["uvx", "mcp-nixos"]
    }
  },
  "formatter": {
    "nixpkgs-fmt": {
      "command": [
        "nix-shell",
        "-p",
        "nixpkgs-fmt",
        "--run",
        "nixpkgs-fmt $FILE"
      ],
      "extensions": [".nix"]
    },
    "statix": {
      "command": [
        "nix-shell",
        "-p",
        "statix",
        "--run",
        "statix check $FILE"
      ],
      "extensions": [".nix"]
    }
  }
}
